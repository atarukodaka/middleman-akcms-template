---
layout: layout
exclude_from_sitemap: true
pagination:
  per_page: 10
---
<% articles = page_articles if pagination? %>

<% titles = {year: "Yearly", month: "Monthly", day: "Daily"} %>
<% formats = {year: "%Y", month: "%b %Y", day: "%d %b %Y"} %>

<% title = "#{titles[archive_type]} Archives: #{date.strftime(formats[archive_type])}" %>
<%= partial("partials/title", locals: {title: title}) %>
<%= partial("partials/article_summary", locals: {articles: articles }) %>

