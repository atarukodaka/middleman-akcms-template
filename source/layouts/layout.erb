<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><%= h(yield_content(:title) || current_page.data.title) %> - <%= h(data.config.site_info.title) %></title>
   
    <!-- Javascripts to load -->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- Stylesheets toload -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag "pygment_trac.css" %>
    <%= stylesheet_link_tag "tagbox.css" %>
    <%= stylesheet_link_tag "style.css" %>
    <% if app.extensions[:google_analytics] %>
    <%= google_analytics_tag %>
    <% end %>
  </head>
  
  <!-- ================ -->
  <body>
    <div class="container">
      <div class="row">
	<div id="header">
	  <div class="eyecatch">
	    <div class="sitename">
	      <%= link_to(h(data.config.site_info.title), sitemap.find_directory_index(""))  %></div>
	  </div>
	  <%= partial("partials/navbar") %>
	</div>
      </div>

      <!-- sidebar / main -->
      <div class="row">
	<div class="col-sm-9">
	  <div id="main">
	    <%= partial("partials/breadcrumb") %>
	    <%= yield %>
	    <%= partial("partials/pagination") %>
	  </div>
	</div>
	<div class="col-sm-3 hidden-xs">  <!--  hidden-xs hidden-sm" -->
	  <%= partial "partials/sidebar" %>
	</div>
      </div>
      <!-- footer -->
      <div class="row">
	<footer id="footer">
	  <div class="copyright">
	    <%= copyright() %>
	    powered by <a href="https://middlemanapp.com">middleman</a> and
	    <a href="https://github.com/atarukodaka/middleman-akcms">middleman-akcms</a>.
	  </div>
	</footer>
      </div> <!-- row -->
    </div> <!-- container -->
  </body>
</html>


